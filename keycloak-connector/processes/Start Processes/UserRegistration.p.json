      "name" : "validate registration",
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.connector.keycloak.service.UserServices;",
            "import com.axonivy.connector.keycloak.enums.RejectReason;",
            "import com.axonivy.connector.keycloak.persistence.repo.RegistrationApplicationRepository;",
            "",
            "RegistrationApplicationRepository applicationRepo = RegistrationApplicationRepository.getInstance();",
            "Boolean isApplicationExisted = applicationRepo.isEmailExisted(in.application.email);",
            "String realmName = ivy.var.get(\"keycloakConnector.realmName\");",
            "Boolean isUserExisted = UserServices.isExistedUserEmail(in.application.email, realmName);",
            "if (isApplicationExisted) {",
            "  in.rejectionReason = RejectReason.EXISTED_REGISTRATION;",
            "} else if (isUserExisted) {",
            "  in.rejectionReason = RejectReason.EXISTED_USER;",
            "} else {",
            "  in.applicationId = applicationRepo.save(in.application);",
            "}"
          ]
        }
      },
